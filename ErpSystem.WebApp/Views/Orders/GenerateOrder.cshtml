@using ErpSystem.Services.ViewModels.Order
@model SupplierOrderViewModel

<div class="container-fluid">
    <h1 class="mt-4">Tables</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Home/Index">Dashboard</a></li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <div class="card mb-4">
        <form asp-controller="Orders" asp-action="GenerateOrder" method="post">
            <div class="form-row">
                <div class="col-md-6">
                    <div class="form-group">
                        @*Supplier: <input class="form-control py-2" id="allSuppliers" type="text" name="supplierName">*@
                        <label class="small mb-1" asp-for="Suppliers.Supplier">Select suppler</label>
                        <select class="form-control" id="customerName" type="text" asp-for="Suppliers.Supplier" asp-items="Model.SuppliersListDropDown"> </select>
                    </div>
                </div>
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary btn-block">Select Supplier</button>
                </div>
            </div>
        </form>
    </div>
    <form asp-controller="Orders" asp-action="GenerateOrder" method="post">
        <div class="row justify-content-lg-center">
            <div class="col-lg-12">
                <div class="card shadow-lg border-0 rounded-lg mt-1">
                    <div class="card-header"><h3 class="text-center font-weight-light my-2">Order</h3></div>
                    <div class="card-body">
                        @foreach (var order in Model.CalculateOrderProductsList)
                        {
                            <hr />
                            <div class="form-row">
                                <div class="col-md-3">
                                    <p>Supplier: @order.Supplier</p>
                                </div>
                                <div class="col-md-3">
                                    <p>ProductId: @order.ProductId</p>
                                </div>
                                <div class="col-md-3">
                                    <p>ProductName: @order.Product</p>
                                </div>
                                <div class="col-md-3">
                                    <p>Product EXW: @order.ProductExwPrice</p>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-3">
                                    <p>Order days: @order.TotalDeliveryTime</p>
                                </div>
                                <div class="col-md-3">
                                    <p>Weight: @order.TotalWeightOfTransportUnit</p>
                                </div>
                                <div class="col-md-3">
                                    <p>Available: @order.ProductsAvailable</p>
                                </div>
                                <div class="col-md-3">
                                    <p>Sales: @order.SalesBasedOnDeliveryPeriod</p>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="col-md-3">
                                    <p>Order suggested: @order.NumberOfTransportUnitsClaculatedForOrder</p>
                                </div>
                                <div class="col-md-3">
                                    <p>@order.Package</p>
                                </div>
                                <div class="col-md-3">
                                </div>
                                <div class="col-md-3">
                                    @*<p><button type="submit" class="btn btn-primary btn-block">Confirm order</button></p>*@
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
